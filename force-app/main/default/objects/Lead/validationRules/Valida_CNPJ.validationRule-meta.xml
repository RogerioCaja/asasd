<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Valida_CNPJ</fullName>
    <active>true</active>
    <description>Valida o formato do CNPJ</description>
    <errorConditionFormula>NOT(
OR(
ISBLANK(CNPJ__c),
REGEX( CNPJ__c , &quot;[0-9]{2}.[0-9]{3}.[0-9]{3}/[0-9]{4}-[0-9]{2}&quot;)
)
)</errorConditionFormula>
    <errorMessage>O CNPJ deve ter o seguinte formato: XX. XXX. XXX/0001-XX</errorMessage>
</ValidationRule>
