<apex:page standardController="TechnicalReport__c" applyBodyTag="false" docType="html-5.0" readOnly="true" renderAs="advanced_pdf" extensions="ReportController" >


<!-- Estilização Básica do PDF => Cores e dimensionamento -->
<head>
    <style>
         @page {
                             
            @bottom-center {
            content: element(footer);
            }
        }
    div.footer {
        display: block;
        padding: 5px;
        font-size: 8pt;
        position: running(footer);
    }
    body{
        font-family: Arial, Helvetica, sans-serif;
    }
    .Header-1{
        width: 100%;
    }

    table{
        width: 100%;
        border: none;
    }

    h2{
        border-top: solid 1px black;
        border-bottom: solid 1px black;
        padding: 10px;
        text-align: center;
    }

    h4{
        margin-top: 15px;
        background-color: #b1afaf;
    }

    .sub-title{
        background-color: #b1afaf;
        /* width: 100%; */
    }

    .informacao-header{
        width: 66.66%;
        text-align: left;
        padding-left: 20px
    } 

    .title-information{
        font-weight: bold;
        font-size: 10pt;
    }

    .information{
        text-transform: uppercase;
        font-size: 10pt;
    }
    .line{
        width: 50%;
    }


   
    .coordinate{
        margin-top: 15px;
        background-color: #dcdcdc;
    }

    .coordinate > tr > td{
        vertical-align: top;
    }

    </style>
</head>
    
<div class="footer">
    <div  style="width: 100%; text-align: center;">
        Relatório em Tempo Real - Emissão: {! Datetime }
    </div>
</div>
    
<!-- Cabeçalho do PDF => Comporta o Logo e as informações da Organização de Vendas -->
<div class="Header-1">

    <table>
        <tr>
            <td><apex:image url="{!URLFOR($Resource.Images_logo, 'ImageToPDF/imgs/agro3-960x540.jpg')}" width="160" height="90" alt="Description of image here"/></td>
            <td class="informacao-header">
               <table cellspacing="5">
                   <tr>
                       <td>
                            Organização de venda: {! visit.orgSales }
                       </td>
                   </tr>
                   <tr>
                        <td>
                            {! visit.orgSales } -  {! Visit.crop}
                        </td>
                    </tr>
               </table>
            </td>
        </tr>
    </table>
</div>


<div>
    <!-- Título do PDF -->
    <h2>RELATÓRIO EM TEMPO REAL</h2>
    <!-- Informações do Cabeçalho => Dados básicos-->
    <h4>Informações da visita</h4>
        <table>
            <tr>
                <td class="title-information">
                    PROFISSIONAL:
                </td>
                <td class="information">
                    {! Visit.visitCTV}
                </td>
                <td class="title-information">
                    DATA INÍCIO:
                </td >
                <td class="information"> 
                    {! Visit.dateVisit}
                </td>
            </tr>
            <tr>
                <td class="title-information">
                    PESSOA:
                </td>
                <td class="information">
                    {! Visit.accountName}
                </td>
                 <td class="title-information">
                    CONTATO:
                </td>
                <td class="information">
                    {! Visit.accountPhone}
                </td>
                
            </tr>
            <tr>
                <td class="title-information">
                    ENDEREÇO:
                </td>
                <td class="information">
                    {! Visit.accountStreet}
                </td>
                <td class="title-information">
                    BAIRRO:
                </td>
                <td class="information">
                    {! Visit.accountCity}
                </td>
            </tr>
            <tr>
                <td class="title-information">
                    ESTADO:
                </td>
                <td class="information">
                    {! Visit.accountState}
                </td>
               <td class="title-information">
                    MUNICÍPIO:
                </td>
                <td class="information">
                    {! Visit.accountCity}
                </td>
            </tr>
        </table>
    <!-- Título de Detalhes => informações como safra e cultura -->
    <h4>Detalhes da Visita</h4>
        <tr>
            <td class="title-information">
                SERVIÇO:
            </td>
            <td class="information">
                {! Visit.service}
            </td>
            <td class="title-information">
                PROPRIEDADE:
            </td>
            <td class="information">
                {! Visit.accountProperty}
            </td>
        </tr>
        <tr>
            <td class="title-information">
                SAFRA:
            </td>
            <td class="information">
                {! Visit.crop}
            </td>
            <td class="title-information">
                CULTURA:
            </td>
            <td class="information">
                {! Visit.culture}
            </td>
        </tr>

    <!-- Informações de coordenadas => Localização do Cliente -->
    <h4>Coordenadas</h4>
        <!--
		<span>Latitude: {! visit.accountLatitude}</span><br/>
        <span>Longitude: {! visit.accountLongitude}</span>
 		-->
        
            <apex:repeat value="{! Photos}" var="photo">
                <div style="page-break-inside: avoid;">
                    <table class="coordinate" style="width:100%; height:100%">
                        <tr style="width:100%">
                            <td style="width:50%;" valign="top">
                                <div>
                                    <apex:image url="/sfc/servlet.shepherd/version/download/{!photo.image}" width="100%" height="100%" alt="Description of image here"/>
                                </div>

                            </td> 
                            <td style="width:50%;" valign="top">
                                <div>
                                    <div class="sub-title">Descrição / Sugestão</div> 
                                    <div> {! photo.observation}</div>
                                </div>
                                
                            </td> 
                        </tr>
                    </table>
                </div>
            </apex:repeat>
        
        
        
    <!-- Possíveis Observações Finais do Cliente -->
    <div style="page-break-inside: avoid;">
        <h4>Considerações Finais</h4>
            <table>
                <tr>
                    <td>
                        {!Visit.notes}
                    </td>
                </tr>
            </table>
    </div>

    
    

    <div style="page-break-inside: avoid;">
        <!-- Informações sobre a próxima visita => datas, endereços, coisas assim -->
        <h4>Próxima Visita:</h4>
        <table>
            <tr>
                <td>
                    <a id="theLink" name="theLink" href="{! Visit.nextVisit  }">Próxima Visita - {! Visit.nextVisitName}</a>
                </td>
            </tr>
        </table>
    </div>
</div>
    

 


</apex:page>