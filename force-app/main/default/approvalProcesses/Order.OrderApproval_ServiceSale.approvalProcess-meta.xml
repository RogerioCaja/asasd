<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>OrderNumber</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>hermano.conde@agrogalaxy.com.br.prod</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Order.RecordType</field>
                <operation>equals</operation>
                <value>Venda de Serviço</value>
            </criteriaItems>
            <criteriaItems>
                <field>Order.Higher_Discount__c</field>
                <operation>greaterThan</operation>
                <value>5,000000</value>
            </criteriaItems>
            <criteriaItems>
                <field>Order.Higher_Discount__c</field>
                <operation>lessOrEqual</operation>
                <value>10,000000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Aprovação inicial</label>
        <name>Approver_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>maria.pilar@agrogalaxy.com.br.prod</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Order.RecordType</field>
                <operation>equals</operation>
                <value>Venda de Serviço</value>
            </criteriaItems>
            <criteriaItems>
                <field>Order.Higher_Discount__c</field>
                <operation>greaterThan</operation>
                <value>10,000000</value>
            </criteriaItems>
        </entryCriteria>
        <label>Maior Desconto</label>
        <name>Approver_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>unfiled$public/OrderApproval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Order.RecordType</field>
            <operation>equals</operation>
            <value>Venda de Serviço</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Higher_Discount__c</field>
            <operation>greaterThan</operation>
            <value>5,000000</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Status</field>
            <operation>equals</operation>
            <value>001</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ApprovedDiscount</name>
            <type>Alert</type>
        </action>
        <action>
            <name>AtualizaStatus_Aprovado</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>AtualizaPrePedido</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DiscountReclined</name>
            <type>Alert</type>
        </action>
        <action>
            <name>UpdateStatus_Recusado</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Solicitacao_de_Aprovacao_do_Pedido</name>
            <type>Alert</type>
        </action>
        <action>
            <name>StatusEmAprovacao</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
